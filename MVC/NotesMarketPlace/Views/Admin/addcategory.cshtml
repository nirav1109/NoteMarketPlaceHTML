@model NotesMarketPlace.Models.NoteCategories
@{
    Layout = "~/Views/Shared/AdminNavigation.cshtml";
}

<head>
    
    <title>Add Category - Notes MarketPlace</title>

</head>

<body>
    <section id="add-category" class="admin-add-page">

       
        <!-- details conatiner -->
        <div class="general-box">
            <div class="content-box-lg">
                <div class="container">
                    <div class="row">
                        <p class="section-heading">Add Category</p>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <form method="post">
                            <div class="row">

                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">

                                    <div class="form-group">
                                        <label class="info-label" for="cname">Category Name *</label>
                                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control input-box-style", @id = "cname", placeholder = "Enter your category" })

                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="category-description">Description *</label>
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control input-box-style", @id = "category-description", placeholder = "Enter your description..." })

                                    </div>

                                    <div class="form-btn">
                                        <button type="submit" class="btn btn-general btn-purple">Submit</button>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- details container -->


    </section>

</body>
