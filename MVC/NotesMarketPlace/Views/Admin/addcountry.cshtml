@model NotesMarketPlace.Models.Countries
@{
    Layout = "~/Views/Shared/AdminNavigation.cshtml";
}

<head>
    
    <title>Add Country - Notes MarketPlace</title>

</head>

<body>
    <section id="add-country" class="admin-add-page">

        
        <!-- details conatiner -->
        <div class="general-box">
            <div class="content-box-lg">
                <div class="container">
                    <div class="row">
                        <p class="section-heading">Add Country</p>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <form method="post">
                            <div class="row">

                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">

                                    <div class="form-group">
                                        <label class="info-label" for="city">Country Name *</label>
                                        @Html.TextBoxFor(x => x.CountryName, new { @class = "form-control input-box-style", @id = "city", placeholder = "Enter country name" })

                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="ccode">Country Code *</label>
                                        @Html.TextBoxFor(x => x.CountryCode, new { @class = "form-control input-box-style", @id = "ccode", placeholder = "Enter country code" })

                                    </div>

                                    <div class="form-btn">
                                        <button type="submit" class="btn btn-general btn-purple">Submit</button>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- details container -->
      

    </section>

</body>

