    <!-- Customized css -->
    <link rel="stylesheet" href="~/Content/Admin/css/style.css">

    <!-- Responsive css -->
    <link rel="stylesheet" href="~/Content/Admin/css/responsive.css">

</head>

<body>
    <section id="my-profile" class="admin-add-page">

        <!-- Header -->
        <div class="only-white-nav extra-style-nav only-white-nav-with-mb">
            <header class="site-header">
                <div class="header-wrapper">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <div class="logo-wrapper">
                        <a href="~/Admin/dashboard" title="Site Logo">
                            <img src="~/Content/Admin/images/logo/dark-logo.png" alt="Logo">
                        </a>
                    </div>
                    <div class="navigation-wrapper">
                        <nav class="main-nav">
                            <ul class="menu-navigation">
                                <li>
                                    <a href="~/Admin/dashboard">Dashboard</a>
                                </li>
                                <li>
                                    <div class="dropdown notes-btn-dropdown">
                                        <a role="button" id="notes-dropdown-lable" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Notes</a>

                                        <div class="dropdown-menu" aria-labelledby="notes-dropdown-lable">
                                            <a class="dropdown-item" href="~/Admin/notesunderreview">Notes Under Review</a>
                                            <a class="dropdown-item" href="~/Admin/publishednotes">Published Notes</a>
                                            <a class="dropdown-item" href="~/Admin/downloadednotes">Downloaded Notes</a>
                                            <a class="dropdown-item" href="~/Admin/rejectednotes">Rejected Notes</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a href="~/Admin/members">Members</a>
                                </li>
                                <li>
                                    <div class="dropdown reports-btn-dropdown">
                                        <a role="button" id="reports-dropdown-lable" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Reports</a>

                                        <div class="dropdown-menu" aria-labelledby="reports-dropdown-lable">
                                            <a class="dropdown-item" href="~/Admin/spamreports">Spam Reports</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown settings-btn-dropdown">
                                        <a role="button" id="settings-dropdown-lable" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Settings</a>

                                        <div class="dropdown-menu" aria-labelledby="settings-dropdown-lable">
                                            <a class="dropdown-item" href="~/Admin/managesystemconfiguration">Manage System Configuration</a>
                                            <a class="dropdown-item" href="~/Admin/manageadministrator">Manage Administrator</a>
                                            <a class="dropdown-item" href="~/Admin/managecategory">Manage Category</a>
                                            <a class="dropdown-item" href="~/Admin/managetype">Manage Type</a>
                                            <a class="dropdown-item" href="~/Admin/managecountry">Manage Countries</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="logged-in-user-photo-li">
                                    <div class="dropdown user-picture-dropdown">
                                        <a href="~/Admin/#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <div class="logged-in-user-photo">
                                                <img src="~/Content/Admin/images/testimonial/customer-4.png" alt="User Photo" class="rounded-circle">
                                            </div>
                                        </a>

                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item" href="~/Admin/myprofile">Update Profile</a>
                                            <a class="dropdown-item" href="~/Admin/changepassword">Change Password</a>
                                            <a class="dropdown-item logout-btn-dropdown" href="~/Admin/login">Logout</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a class="btn btn-general btn-purple" href="~/Admin/login" title="Download" role="button">Logout</a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <img class="logo-in-mobile-menu" src="~/Content/Admin/images/logo/dark-logo.png" alt="Notes Logo">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li>
                                    <a href="~/Admin/dashboard">Dashboard</a>
                                </li>
                                <li>
                                    <div class="dropdown notes-btn-dropdown">
                                        <a role="button" id="notes-dropdown-lable" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Notes</a>

                                        <div class="dropdown-menu" aria-labelledby="notes-dropdown-lable">
                                            <a class="dropdown-item" href="~/Admin/notesunderreview">Notes Under Review</a>
                                            <a class="dropdown-item" href="~/Admin/publishednotes">Published Notes</a>
                                            <a class="dropdown-item" href="~/Admin/downloadednotes">Downloaded Notes</a>
                                            <a class="dropdown-item" href="~/Admin/rejectednotes">Rejected Notes</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a href="~/Admin/members">Members</a>
                                </li>
                                <li>
                                    <div class="dropdown reports-btn-dropdown">
                                        <a role="button" id="reports-dropdown-lable" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Reports</a>

                                        <div class="dropdown-menu" aria-labelledby="reports-dropdown-lable">
                                            <a class="dropdown-item" href="~/Admin/spamreports">Spam Reports</a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="dropdown settings-btn-dropdown">
                                        <a role="button" id="settings-dropdown-lable" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Settings</a>

                                        <div class="dropdown-menu" aria-labelledby="settings-dropdown-lable">
                                            <a class="dropdown-item" href="~/Admin/managesystem-configuration">Manage System Configuration</a>
                                            <a class="dropdown-item" href="~/Admin/manageadministrator">Manage Administrator</a>
                                            <a class="dropdown-item" href="~/Admin/managecategory">Manage Category</a>
                                            <a class="dropdown-item" href="~/Admin/managetype">Manage Type</a>
                                            <a class="dropdown-item" href="~/Admin/managecountry">Manage Countries</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="logged-in-user-photo-li">
                                    <div class="logged-in-user-photo">
                                        <div class="dropdown">
                                            <a href="~/Admin/#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <img src="~/Content/Admin/images/testimonial/customer-4.png" alt="User Photo" class="rounded-circle">
                                            </a>

                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                <a class="dropdown-item" href="my-profile">Update Profile</a>
                                                <a class="dropdown-item" href="change-password">Change Password</a>
                                                <a class="dropdown-item logout-btn-dropdown" href="login">Logout</a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a class="btn btn-general btn-purple" href="login" title="Download" role="button">Logout</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
        </div>
        <!-- Header ends -->
        <!-- details conatiner -->
        <div class="general-box">
            <div class="content-box-lg">
                <div class="container">
                    <div class="row">
                        <p class="section-heading">My Profile</p>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <form method="post">
                            <div class="row">

                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">

                                    <div class="form-group">
                                        <label class="info-label" for="fname">First Name *</label>
                                        @Html.TextBoxFor(x => x.FirstName, new {Value = @ViewBag.firstName, @class = "form-control input-box-style", @id = "fname", placeholder = "Enter your first name" })

                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="lname">Last Name *</label>
                                        @Html.TextBoxFor(x => x.LastName, new { Value = @ViewBag.lastName, @class = "form-control input-box-style", @id = "lname", placeholder = "Enter your last name" })

                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="email">Email *</label>
                                        @Html.TextBoxFor(x => x.EmailID, new {Value = @ViewBag.email, @class = "form-control input-box-style", @id = "email", placeholder = "Enter your email address" })

                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="semail">Secondary Email</label>
                                        @Html.TextBoxFor(x => x.SecondaryEmailAddress, new { @class = "form-control input-box-style", @id = "semail", placeholder = "Enter your email address" })

                                    </div>

                                    <div class="row no-gutters">

                                        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                                            <div class="form-group">
                                                <label class="info-label" for="ccode">Code</label>
                                                @Html.DropDownListFor(x => x.CountryCode, new SelectList(ViewBag.countryCode, "Value", "Text"), "Select your country", new { @class = "form-control input-box-style", id = "ccode" })

                                                <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/Admin/images/user-profile/down-arrow.png" alt="eye"></div>
                                            </div>
                                        </div>

                                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10">
                                            <div class="form-group">
                                                <label class="info-label" for="phn">Phone Number</label>
                                                @Html.TextBoxFor(x => x.PhoneNumber, new { id = "phn", @class = "form-control input-box-style", placeholder = "Enter your phone number" })
                                            </div>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label class="info-label" for="exampleInputEmail1">Profile Picture</label>
                                        <div onclick="document.getElementById('myprofile-picture').click()" id="uploadProfilePicture" class="form-control input-box-style upload-input-box" style="cursor:pointer;">

                                            <img src="~/Content/Admin/images/user-profile/upload.png" alt="Upload Profile Picture">
                                            <p>Upload a picture</p>
                                        </div>
                                    </div>
                                    @Html.TextBoxFor(x => x.ProfilePicture, new { @class = "form-control input-box-style", style = "display:none;", @id = "myprofile-picture", type = "file", name = "myprofile-picture" })
                                    
                                    <div class="form-btn">
                                        <button type="submit" class="btn btn-general btn-purple">Submit</button>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- details container -->
        <!-- Footer  -->
        <footer>
            <div class="container">
                <div class="row no-gutters">

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-4 col-12 text-left">
                        <p class="version-footer">Version : 1.1.24</p>
                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-8 col-12 text-right">
                        <p class="copyright-footer">Copyright &copy; TatvaSoft All Rights Reserved.</p>
                    </div>

                </div>
            </div>
        </footer>
        <!-- Footer Ends -->

    </section>

    <!-- Java-scripts -->

    <!-- JQuery -->
    <script src="~/Scripts/Admin/js/jquery.js"></script>

    <!-- Production version -->
