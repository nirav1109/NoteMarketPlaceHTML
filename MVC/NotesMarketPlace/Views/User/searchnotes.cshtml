@model  NotesMarketPlace.Models.NoteDetailsDummy
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Search Notes - NotesMarketPlace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/User/images/logo/favicon.ico">

    <!-- GoogleFonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/Content/User/css/font-awesome/css/fontawesome.min.css">

    <!-- FontAwesome link -->
    <script src="https://kit.fontawesome.com/4fa77e6d3c.js" crossorigin="anonymous"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/User/css/bootstrap/bootstrap.min.css">

    <!-- Customized css -->
    <link rel="stylesheet" href="~/Content/User/css/style.css">

    <!-- Responsive css -->
    <link rel="stylesheet" href="~/Content/User/css/responsive.css">


    <script>
        function searchNote() {
            
            document.getElementById("searchForm").submit();

        }
    </script>

</head>

<body>
    <section id="search-notes">

        <!-- Header -->
        <div class="only-white-nav">
            <header class="site-header">
                <div class="header-wrapper">

                    <!-- Mobile Menu Open Button -->
                    <span id="mobile-nav-open-btn">&#9776;</span>

                    <div class="logo-wrapper">
                        <a href="~/User/home" title="Site Logo">
                            <img src="~/Content/User/images/logo/dark-logo.png" alt="Logo">
                        </a>
                    </div>
                    <div class="navigation-wrapper">
                        <nav class="main-nav">
                            <ul class="menu-navigation">
                                <li class="active">
                                    <a href="~/User/searchnotes">Search Notes</a>
                                </li>
                                <li>
                                    <a href="~/User/addnote">Sell Your Notes</a>
                                </li>
                                <li>
                                    <a href="~/User/faq">FAQ</a>
                                </li>
                                <li>
                                    <a href="~/User/contactus">Contact Us</a>
                                </li>
                                <li>
                                    <a class="btn btn-general btn-purple" href="~/User/login" title="Download" role="button">Login</a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <img class="logo-in-mobile-menu" src="~/Content/User/images/logo/dark-logo.png" alt="Notes Logo">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>

                        <div id="mobile-nav-content">
                            <ul class="nav">
                                <li class="active">
                                    <a href="~/User/search-notes">Search Notes</a>
                                </li>
                                <li>
                                    <a href="~/User/add-note">Sell Your Notes</a>
                                </li>
                                <li>
                                    <a href="~/User/faq">FAQ</a>
                                </li>
                                <li>
                                    <a href="~/User/contact-us">Contact Us</a>
                                </li>
                                <li>
                                    <a class="btn btn-general btn-purple" href="~/Use/login" title="Download" role="button">Login</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
        </div>
        <!-- Header ends -->
        <!-- background -->
        <div class="small-height-bg">
            <p class="text-center">Search Notes</p>
        </div>
        <!-- background -->
        <!-- general box -->
        <div class="general-box">
            <div class="content-box-lg">
                @using (Html.BeginForm("searchnotes", "User", FormMethod.Get, new { @Id = "searchForm" }))
                {
                    <div class="container">
                        <div class="row">
                            <p class="box-heading">Search and Filter Notes</p>
                        </div>
                    </div>

                    <div class="container">
                        <div class="row">
                            <div class="search-notes-input-box">

                                <div class="form-group has-search-bar">
                                    <span class="search-symbol"><img src="~/Content/User/images/Dashboard/search-icon.png" alt=""></span>
                                    <input type="text" name="search" class="form-control input-box-style search-notes-bar" id="example" placeholder="Search notes here...">
                                </div>

                                <div class="row">

                                    <div class="col-md-2 col-sm-4 padding-right-0">
                                        <div class="form-group">
                                            @Html.DropDownListFor(x => x.NoteTypeID, new SelectList(ViewBag.notetypes, "Value", "Text"), "Select Your Type", new { @onchange = "searchNote()", @class = "form-control input-box-style", id = "exampleFormControlSelect1" })

                                            <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/User/images/user-profile/down-arrow.png" alt="eye"></div>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-4 padding-right-0">
                                        <div class="form-group">
                                            @Html.DropDownListFor(x => x.NoteCategoryID, new SelectList(ViewBag.notecategoies, "Value", "Text"), "Select Your category", new {  @onchange = "searchNote()", @class = "form-control input-box-style", id = "exampleFormControlSelect1" })
                                            <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/User/images/user-profile/down-arrow.png" alt="eye"></div>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-4 padding-right-0">
                                        <div class="form-group">
                                            @Html.DropDownListFor(x => x.UniversityInformation, new SelectList(ViewBag.universities, "Value", "Text"), "Select Your University", new { @onchange = "searchNote()", @class = "form-control input-box-style", id = "exampleFormControlSelect1" })
                                            <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/User/images/user-profile/down-arrow.png" alt="eye"></div>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-4 padding-right-0">
                                        <div class="form-group">
                                            @Html.DropDownListFor(x => x.Course, new SelectList(ViewBag.courses, "Value", "Text"), "Select Your Course", new { @onchange = "searchNote()", @class = "form-control input-box-style", id = "exampleFormControlSelect1" })
                                            <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/User/images/user-profile/down-arrow.png" alt="eye"></div>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-4 padding-right-0">
                                        <div class="form-group">
                                            @Html.DropDownListFor(x => x.CountryID, new SelectList(ViewBag.countries, "Value", "Text"), "Select Your Country", new { @onchange = "searchNote()", @class = "form-control input-box-style", id = "exampleFormControlSelect1" })
                                            <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/User/images/user-profile/down-arrow.png" alt="eye"></div>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-4">
                                        <div class="form-group">
                                            <select class="form-control input-box-style" id="exampleFormControlSelect1">
                                                <option value="" disabled selected>Select rating</option>
                                                <option>Type 1</option>
                                                <option>Type 2</option>
                                                <option>Type 3</option>
                                                <option>Type 4</option>
                                            </select>
                                            <div class="select-down-arrow"><img class="select-down-arrow-img" src="~/Content/User/images/user-profile/down-arrow.png" alt="eye"></div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- general-box -->
        <!-- general box -->
        <div class="general-box searched-notes-box">
            <div class="content-box-lg">
                @{
                    IEnumerable<NotesMarketPlace.Models.nd> seachedNote = ViewBag.filterNotes;
                   
                }
                <div class="container">
                    <div class="row">
                        <p class="box-heading">Total @ViewBag.nd Notes</p>
                    </div>
                </div>

                <div class="container">
                    <div class="row">



                        @foreach (var i in seachedNote)
                        {
                           

                            <div class="col-lg-4 col-md-6 col-sm-6">

                                <div class="note-details-box">
                                    <img src="@Url.Content(@i.note.DisplayPicture)" alt="">
                                    <div class="note-details">
                                        <a href="/User/notedetail/@i.note.NoteID">
                                            <p class="note-name-title"> @i.note.NoteTitle </p>
                                        </a>
                                        <p class="note-info-with-icon"><span><img src="~/Content/User/images/Search/university.png" alt=""></span>@i.note.UniversityInformation, @i.countryname.CountryName</p>
                                        <p class="note-info-with-icon"><span><img src="~/Content/User/images/Search/pages.png" alt=""></span>@i.note.NumberOfPages Pages</p>
                                        <p class="note-info-with-icon"><span><img src="~/Content/User/images/Search/date.png" alt=""></span>@i.note.PublishedDate</p>
                                        <p class="note-info-with-icon red-text"><span><img src="~/Content/User/images/Search/flag.png" alt=""></span>5 Users marked this note as inappropriate</p>

                                        <div class="notes-rating">
                                            <div class="col-md-7 col-sm-8 col-8">
                                                <div class="rate">
                                                    <input type="radio" id="star5" name="rate" value="5" />
                                                    <label for="star5" title="text">5 stars</label>
                                                    <input type="radio" id="star4" name="rate" value="4" />
                                                    <label for="star4" title="text">4 stars</label>
                                                    <input type="radio" id="star3" name="rate" value="3" />
                                                    <label for="star3" title="text">3 stars</label>
                                                    <input type="radio" id="star2" name="rate" value="2" />
                                                    <label for="star2" title="text">2 stars</label>
                                                    <input type="radio" id="star1" name="rate" value="1" />
                                                    <label for="star1" title="text">1 star</label>
                                                </div>
                                            </div>
                                            <div class="col-md-5 col-sm-4 col-4">
                                                <p class="review-count">100 reviews</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        }






                    </div>
                </div>

            </div>
        </div>
        
        <!-- general box -->
        <!-- pagination -->
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="" aria-label="Previous">
                        <img src="~/Content/User/images/pagination/left-arrow.png" alt="">
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="" aria-label="Next">
                        <img style="color: white;" src="~/Content/User/images/pagination/right-arrow.png" alt="">
                    </a>
                </li>
            </ul>
        </nav>
        <!-- pagination -->
        <!-- Footer  -->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-8 col-12 text-left">
                        <p>Copyright &copy; TatvaSoft All Rights Reserved.</p>
                    </div>
                    <div class="col-md-6 col-sm-4 col-12 text-right">
                        <ul class="social-list">
                            <li><a class="facebook-img" href="#"><img src="~/Content/User/images/Homepage/facebook.png" alt=""></a></li>
                            <li><a class="twitter-img" href="#"><img src="~/Content/User/images/Homepage/twitter.png" alt=""></a></li>
                            <li><a class="linkedin-img" href="#"><img src="~/Content/User/images/Homepage/linkedin.png" alt=""></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Footer Ends -->

    </section>

    <!-- Java-scripts -->

    <!-- JQuery -->
    <script src="~/Scripts/User/js/jquery.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/User/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/User/js/script.js"></script>

    <!-- Java-scripts -->
</body>

</html>
