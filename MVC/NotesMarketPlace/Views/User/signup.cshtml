@model NotesMarketPlace.Models.SignUp

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Signup - Notes MarketPlace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/User/images/logo/favicon.ico">

    <!-- GoogleFonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/Content/User/css/font-awesome/css/fontawesome.min.css">

    <!-- FontAwesome link -->
    <script src="https://kit.fontawesome.com/4fa77e6d3c.js" crossorigin="anonymous"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/User/css/bootstrap/bootstrap.min.css">

    <!-- Customized css -->
    <link rel="stylesheet" href="~/Content/User/css/style.css">

    <!-- Responsive css -->
    <link rel="stylesheet" href="~/Content/User/css/responsive.css">
</head>

<body>
    <!-- Background Image -->
    <img class="library-img" src="~/Content/User/images/login/banner-with-overlay.jpg" alt="Library">

    <!-- Signup Box -->
    <section id="signup">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-12">
                    <div class="main-logo">
                        <a href="~/User/home"><img class="img-fluid" src="~/Content/User/images/login/top-logo.png" alt="Notes MarketPlace Logo"></a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="signup-box">
                        <p class="section-heading" class="text-center">Create An Account</p>
                        <p class="user-instruction">Enter your details to signup</p>
                        <div class="success-msg">
                            @Html.Raw(@ViewBag.IsSuccess)
                        </div>
                        <form action="Signup" method="post">
                            <div class="form-group">
                                <label class="info-label" for="exampleInputEmail">First Name *</label>
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control input-box-style", @id = "exampleInputEmail", @placeholder = "Enter your first name" })
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("FirstName", new { @style = "color:red" })
                                    </p>
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="info-label" for="exampleInputEmail1">Last Name *</label>
                                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control input-box-style", @id = "exampleInputEmail1", @placeholder = "Enter your last name" })
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("LastName", new { @style = "color:red" })
                                    </p>
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="info-label" for="exampleInputEmail1">Email *</label>
                                @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control input-box-style", @id = "exampleInputEmail2", @placeholder = "Enter your email " })
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("EmailID", new { @style = "color:red" })
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="info-label" for="Password">Password</label>
                                @Html.PasswordFor(x => x.Password, new { @type = "password", @class = "form-control input-box-style", @id = "Password", @placeholder = "Enter your password" })

                                <div class="eye"><img class="eye-img" src="~/Content/User/images/login/eye.png" alt="eye"></div>
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("Password", new { @style = "color:red" })
                                    </p>
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="info-label" for="Password2">Confirm Password</label>
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @type = "password", @class = "form-control input-box-style", @id = "Password2", @placeholder = "Re-enter password " })
                                <div class="incorrect-password-label">
                                    <p>
                                        @Html.ValidationMessage("ConfirmPassword", new { @style = "color:red" })
                                    </p>
                                </div>

                                <div class="eye"><img class="eye-img" src="~/Content/User/images/login/eye.png" alt="eye"></div>
                            </div>
                            <div class="form-btn">
                                <button type="submit" class="btn btn-general btn-purple">Sign Up</button>
                            </div>
                        </form>
                        <div class="toggle-btw-login-signup" class="text-center">
                            <p>Already have an account? <span><a href="~/User/login">Login</a></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Login Box Ends -->
    <!-- Java-scripts -->
    <!-- JQuery -->
    <script src="~/Scripts/User/js/jquery.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/User/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/User/js/script.js"></script>

    <!-- Java-scripts -->
</body>

</html>
